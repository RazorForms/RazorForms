@using RazorForms
@using InputType = RazorForms.InputType
@inherits RazorForms.Templates.Inputs.InputRawBase<RazorForms.FormInput<RazorForms.Options.IFormComponentOptions>>

@if (Model.Type == InputType.TextArea)
{
	<textarea id="@Model.MvcName"
			  name="@Model.MvcName"
			  class="@GenerateInputClasses()"
			  @Html.Raw(GenerateAttributes(Model.Attributes, GenerateAdditionalAttributes))>@Model.Value</textarea>
}
else
{
	<input id="@Model.MvcName"
	       name="@Model.MvcName"
	       type="@Model.Type.GetDescription()"
	       class="@GenerateInputClasses()"
	       value="@Model.Value"
	       @Html.Raw(GenerateAttributes(Model.Attributes, GenerateAdditionalAttributes))/>
}