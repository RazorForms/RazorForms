@inherits RazorForms.Templates.Elements.LabelRawBase<RazorForms.FormInput<RazorForms.Options.IFormComponentOptions>>

<label for="@Model.MvcName"
       class="@GenerateLabelClasses()">
	@if (Model.LabelAcceptsChildContent && !Model.ChildContent.IsEmptyOrWhiteSpace)
	{
		@Model.ChildContent
	}
	else
	{
		@Model.DisplayName
	}
</label>